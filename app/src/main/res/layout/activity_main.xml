<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Proceed to Scan"
        android:textColor="@color/blue"
        android:textSize="25sp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/Scan_Prints_Button"
        app:layout_constraintEnd_toEndOf="@+id/Scan_Prints_Button"
        app:layout_constraintStart_toStartOf="@+id/Scan_Prints_Button" />

    <Button
        android:id="@+id/Scan_Prints_Button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Proceed"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:backgroundTint="@color/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>